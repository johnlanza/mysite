<h1>Add Game</h1>

<style>
  /* Make game form labels match the smaller book-form label size */
  section.game-form label {
    font-size: 1.2rem;
    font-weight: 400;
  }
</style>

<section class="game-form">
  <% if (typeof errorMessage !== "undefined" && errorMessage) { %>
  <p style="color: red; font-weight: bold; margin-bottom: 20px">
    <%= errorMessage %>
  </p>
  <% } %>

  <form action="/games" method="POST" enctype="multipart/form-data">
    <div>
      <label for="title">Title</label>
      <p>
        <input
          type="text"
          id="title"
          class="form-control"
          name="game[title]"
          required
          autofocus />
      </p>
    </div>

    <div>
      <label for="tagline">Tagline (short line under title)</label>
      <p>
        <input
          type="text"
          id="tagline"
          class="form-control"
          name="game[tagline]" />
      </p>
    </div>

    <div>
      <label for="bestFor">Best for</label>
      <p>
        <input
          type="text"
          id="bestFor"
          class="form-control"
          name="game[bestFor]"
          placeholder="High-energy chaos with people who like to yell" />
      </p>
    </div>

    <div>
      <label for="players">Players</label>
      <p>
        <input
          type="text"
          id="players"
          class="form-control"
          name="game[players]"
          placeholder="3–8" />
      </p>
    </div>

    <div class="form-row">
      <div class="col">
        <label for="playTime">Play time</label>
        <p>
          <input
            type="text"
            id="playTime"
            class="form-control"
            name="game[playTime]"
            placeholder="10–30 minutes" />
        </p>
      </div>

      <div class="col">
        <label for="teachTime">Teach time</label>
        <p>
          <input
            type="text"
            id="teachTime"
            class="form-control"
            name="game[teachTime]"
            placeholder="~5 minutes (super easy)" />
        </p>
      </div>
    </div>

    <div class="form-row">
      <div class="col">
        <label for="energy">Energy</label>
        <p>
          <input
            type="text"
            id="energy"
            class="form-control"
            name="game[energy]"
            placeholder="Chaotic / conversational / chill" />
        </p>
      </div>

      <div class="col">
        <label for="brainSpace">Brain space</label>
        <p>
          <input
            type="text"
            id="brainSpace"
            class="form-control"
            name="game[brainSpace]"
            placeholder="Light / medium / heavy" />
        </p>
      </div>

      <div class="col">
        <label for="spiceLevel">Spice</label>
        <p>
          <input
            type="text"
            id="spiceLevel"
            class="form-control"
            name="game[spiceLevel]"
            placeholder="Gentle / spiky / brutal" />
        </p>
      </div>
    </div>

    <div>
      <label for="why">Why I keep this on my shelf</label>
      <p>
        <textarea
          id="why"
          class="form-control"
          name="game[why]"
          rows="3"></textarea>
      </p>
    </div>

    <div>
      <label for="whenToSkip">When to skip it</label>
      <p>
        <textarea
          id="whenToSkip"
          class="form-control"
          name="game[whenToSkip]"
          rows="2"></textarea>
      </p>
    </div>

    <div>
      <label for="howToPitch">How to pitch it to your group</label>
      <p>
        <input
          type="text"
          id="howToPitch"
          class="form-control"
          name="game[howToPitch]"
          placeholder='Short line, e.g., "It’s a fast, shouty trading game..."' />
      </p>
    </div>

    <div>
      <label for="additionalNotes">Additional notes</label>
      <p>
        <textarea
          id="additionalNotes"
          class="form-control"
          name="game[additionalNotes]"
          rows="2"></textarea>
      </p>
    </div>

    <div>
      <label for="conversationSpark">Conversation spark</label>
      <p>
        <textarea
          id="conversationSpark"
          class="form-control"
          name="game[conversationSpark]"
          rows="2"></textarea>
      </p>
    </div>

    <div>
      <label for="notes">Extra notes (HTML allowed)</label>
      <p>
        <textarea
          id="notes"
          class="form-control"
          name="game[notes]"
          rows="4"></textarea>
      </p>
    </div>

    <div>
      <label for="link">External link (publisher, BGG, etc.)</label>
      <p>
        <input
          type="url"
          id="link"
          class="form-control mb-3"
          name="game[link]" />
      </p>
    </div>

    <div>
      <label for="image">Game image (optional)</label>
      <p>
        <input type="file" id="image" name="image" accept="image/*" />
      </p>
      <p>Images are automatically resized to a standard box size.</p>
    </div>

    <button class="btn btn-secondary" type="submit">Add Game</button>
  </form>
</section>
